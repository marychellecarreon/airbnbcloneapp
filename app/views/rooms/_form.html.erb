  </div>

  <div class="field">
    <%= form.label :bed %>
    <%= form.number_field :bed, id: :room_bed %>
  </div>

  <div class="field">
    <%= form.label :bathroom %>
    <%= form.number_field :bathroom, id: :room_bathroom %>
